
# Audio Bluetooth Headset profile.
#  Toggle mic operation.
shift + XF86Tools
    toggle_a2dp

# Audio +/-/mute keys
#  Output volume +/-.
XF86Audio{Raise,Lower}Volume
    amixer sset Master {5%+,5%-} unmute

#  Output volume +/-.
#   Ignore max limit.
ctrl + XF86Audio{Raise,Lower}Volume
    pactl set-sink-volume 0 {+5%,-5%}

#  Input volume +/-.
shift + XF86Audio{Raise,Lower}Volume
    amixer sset Capture {5%+,5%-} unmute

#  Toggle mute
XF86Audio{_,Mic}Mute
    amixer sset {Master,Capture} toggle

#  Input Mute
#   Additionally overload shift + Output Mute to mute mic
shift + XF86AudioMute
    amixer sset Capture toggle

#  Messages - dunst
#   - h: history
XF86Mail; d; {h}
    dunstctl {history-pop}

# Execute program
#  Execute some applications
#   - e: electron apps (see below)
#   - n: nnn
#   - r: ranger
#   - f: firefox
#   - s: surf (tabbed)
#   - m: music (ncmpcpp)
super + e ; {f,n,r,s,m}
    {firefox,st nnn,st ranger,tsurf,st ncmpcpp}

#  Execute electron apps
#   - m: messenger
#   - p: piazza
#   - w: whatsapp
#   - y: youtube-music
super + e ; e ; {m,p,w,y}
    {fb-messenger,piazza,whatsapp,yt-music}

# Take a screenshot
Print
    gnome-screenshot -i
